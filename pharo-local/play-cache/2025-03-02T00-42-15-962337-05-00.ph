dbFile := (Smalltalk imageDirectory / 'guilds.db') fullName.connection := SQLite3Connection on: dbFile.connection open."Table for guild resources"connection execute: 'CREATE TABLE IF NOT EXISTS resources (    id INTEGER PRIMARY KEY,    name TEXT,    amount INTEGER,    changePerDay INTEGER  );'."Table for guild members"connection execute: 'CREATE TABLE IF NOT EXISTS members (    id INTEGER PRIMARY KEY,    name TEXT,    role TEXT,    tasks TEXT  );'."Get all data as a simple string"result := String new writeStream.cursor := connection execute: 'SELECT * FROM resources;'.row := cursor next.[row notNil] whileTrue: [    result nextPutAll: row asString.    result cr.    row := cursor next.].stringResult := result contents.TLWebserver teapot    GET: '/api/resources' -> stringResult